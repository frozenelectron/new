<h1> Edit Password </h1>

<%= form_with model: @user, url: password_path do |form| %>
    <% if Current.user.errors.any? %>
        <div class="alert alert-danger">
            <% Current.user.full_messages.each do |messages| %>
                <div><%= messages %></div>
            <% end %>
        </div>
    <% end %>



    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class:"form-control", placeholder:"Enter your password" %>
    </div>
    <div class="mb-3">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, class:"form-control", placeholder:"Enter your password again" %>
    </div>    
    
    <div class="mb-3">
        <%= form.submit "Update Password", class:"btn btn-primary" %>
    </div>
    
<% end %>