<h1>Sign In</h1>

<%= form_with model: @user, url: signin_path do |form| %>
<div>
    <%= form.label :email %>
    <%= form.text_field :email, class:"form-control", placeholder:"Email" %>
</div>

<div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class:"form-control", placeholder:"Password" %>
    <%= link_to "Forgot your password?", password_reset_path %>
</div>

<div>
    <%= form.submit "Sign In", class:"btn btn-primary" %>
</div>
<% end %>